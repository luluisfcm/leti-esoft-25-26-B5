{
  "info": {
    "name": "Vaccine API (minimal)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "vaccine-api-minimal"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080/api/v1" }
  ],
  "item": [
    {
      "name": "Vaccine Types - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/vaccine-types"
      }
    },
    {
      "name": "Vaccine Types - Create",
      "request": {
        "method": "POST",
        "header": [{ "key":"Content-Type", "value":"application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"mRNA\", \"description\": \"mRNA vaccines\" }"
        },
        "url": "{{baseUrl}}/vaccine-types"
      }
    },
    {
      "name": "Vaccine Types - Get by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/vaccine-types/1"
      }
    },
    {
      "name": "Vaccines - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/vaccines"
      }
    },
    {
      "name": "Vaccines - Create",
      "request": {
        "method": "POST",
        "header": [{ "key":"Content-Type", "value":"application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{ \"typeId\": 1, \"manufacturer\": \"Acme\", \"batch\": \"B-001\", \"date\": \"2025-01-01\" }"
        },
        "url": "{{baseUrl}}/vaccines"
      }
    },
    {
      "name": "Vaccines - Get by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/vaccines/1"
      }
    }
  ]
}

