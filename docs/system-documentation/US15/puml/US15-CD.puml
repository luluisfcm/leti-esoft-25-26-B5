' ===== UI / Controller / Service / Repository =====
class AdminUI
class StaffController {
  +listEmployeesByRole(role: StaffRole): List<StaffMember>
}
class StaffService {
  +getEmployeesByRole(role: StaffRole): List<StaffMember>
}
class StaffRepository {
  +findByRole(role: StaffRole): List<StaffMember>
}

enum StaffRole {
  Receptionist
  Nurse
  DGSAdministrator
}

note right of StaffRole : Used as a filter parameter in the application layer

' ===== Domain (per DM) =====
abstract StaffMember {
  +name : String
  +postalAddress : String
  +phone : String
  +email : String
}
class Receptionist extends StaffMember
class Nurse extends StaffMember
class DGSAdministrator extends StaffMember

' Centers in the same style as StaffMember
abstract VaccinationCenter {
  +name : String
  +postalAddress : String
  +phone : String
  +email : String
  +website : String
  +maxVaccinesPerHour : Integer
  +openingHours : Time
  +closingHours : Time
}
class HealthcareCenter extends VaccinationCenter
class CommunityMassVaccinationCenter extends VaccinationCenter

