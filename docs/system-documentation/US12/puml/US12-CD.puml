' ===================== UI & Controller =====================
class ListVaccinesView {
}

class ListVaccinesController {
    +getAllGrouped(): List<Vaccine>
}

' ===================== Domain / Service =====================
class Administrator {
    - name
    +getVaccineService(): VaccineService
}

class VaccineService {
    +VaccineService(VaccineRepository vacRepo)
    +getAllGroupedByBrand(): List<Vaccine>
}

' ===================== Repositories =====================
interface VaccineRepository <<interface>> {
    +findAll(): List<Vaccine>
}

interface RepositoryFactory <<interface>> {
    +getVaccineRepository(): VaccineRepository
}

' ===================== Entities =====================
class Vaccine {
    - commercialName
    - brand
    - technologyUsed
    +getBrand(): string
    +getType(): VaccineType
}

class VaccineType {
    - disease
    - shortDescription
    +getDisease(): string
}

' ===================== Associations =====================
Administrator "1" -down-> "1" RepositoryFactory: uses
VaccineRepository "1" -right-> "0..*" Vaccine: records
Vaccine "*" -down-> "1" VaccineType: is of

ListVaccinesView ..> ListVaccinesController
ListVaccinesView ..> Vaccine
ListVaccinesController ..> Administrator
ListVaccinesController ..> VaccineService
VaccineService ..> VaccineRepository

Administrator -> VaccineService: adopts
RepositoryFactory .right.> VaccineRepository

@enduml