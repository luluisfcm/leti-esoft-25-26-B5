@startuml
' US10-SD.puml
' Baseado na estrutura da imagem.png (template USXX-SD.puml)

title US10 - Specify a new vaccine type

autoactivate on
autonumber

' Mapeado de User -> Administrator
actor "Administrator" as Admin
' Mapeado de :xxxxView -> :CreateVaccineTypeView
participant ":CreateVaccineTypeView" as View
' Mapeado de :xxxxController -> :CreateVaccineTypeController
participant ":CreateVaccineTypeController" as Ctrl
' Mapeado de :Class1 -> admin:DGSAdministrator
participant "admin:DGSAdministrator" as AdminRole

activate Admin

' Mapeado de "Authentication request"
Admin -> View: Requests to specify a new vaccine type
activate View

' Mapeado de "authenticate(userId, pwd)"
' Assumindo que a View jÃ¡ recolheu os dados (code, desc)
View -> Ctrl: createVaccineType(code, desc)
activate Ctrl

' Mapeado de "doLogIn(userId, pwd)"
Ctrl -> AdminRole: specifyVaccineType(code, desc)
activate AdminRole

' Mapeado de "userToken" (retorno do trabalho)
' Retorna o objeto criado ou um status
AdminRole --> Ctrl: vaccineType
deactivate AdminRole

' Mapeado de "ok"
Ctrl --> View: (operationSuccess)
deactivate Ctrl

' Mapeado de "Authentication response"
View --> Admin: Informs operation success
deactivate View
deactivate Admin

@enduml